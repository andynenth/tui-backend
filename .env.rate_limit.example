# Rate Limiting Configuration Example
# Copy this to .env and adjust values as needed

# Global Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_LOG_VIOLATIONS=true

# HTTP Rate Limits (requests per minute)
RATE_LIMIT_GLOBAL_REQUESTS=100
RATE_LIMIT_GLOBAL_WINDOW=60
RATE_LIMIT_GLOBAL_BURST=2.0

RATE_LIMIT_HEALTH_REQUESTS=60
RATE_LIMIT_HEALTH_WINDOW=60

RATE_LIMIT_HEALTH_DETAILED_REQUESTS=30
RATE_LIMIT_HEALTH_DETAILED_WINDOW=60

RATE_LIMIT_ROOMS_REQUESTS=30
RATE_LIMIT_ROOMS_WINDOW=60

RATE_LIMIT_RECOVERY_REQUESTS=10
RATE_LIMIT_RECOVERY_WINDOW=60

RATE_LIMIT_EVENT_STORE_REQUESTS=20
RATE_LIMIT_EVENT_STORE_WINDOW=60

# WebSocket Rate Limits
WS_RATE_LIMIT_PING_REQUESTS=120
WS_RATE_LIMIT_PING_WINDOW=60

WS_RATE_LIMIT_ACK_REQUESTS=200
WS_RATE_LIMIT_ACK_WINDOW=60

# Game Events - Stricter Limits
WS_RATE_LIMIT_DECLARE_REQUESTS=5
WS_RATE_LIMIT_DECLARE_WINDOW=60
WS_RATE_LIMIT_DECLARE_BURST=1.2

WS_RATE_LIMIT_PLAY_REQUESTS=20
WS_RATE_LIMIT_PLAY_WINDOW=60

WS_RATE_LIMIT_CREATE_ROOM_REQUESTS=5
WS_RATE_LIMIT_CREATE_ROOM_WINDOW=60
WS_RATE_LIMIT_CREATE_ROOM_BLOCK=300

WS_RATE_LIMIT_START_GAME_REQUESTS=3
WS_RATE_LIMIT_START_GAME_WINDOW=60
WS_RATE_LIMIT_START_GAME_BLOCK=600

WS_RATE_LIMIT_REQUEST_REDEAL_REQUESTS=3
WS_RATE_LIMIT_REQUEST_REDEAL_WINDOW=60
WS_RATE_LIMIT_REQUEST_REDEAL_BLOCK=300

# Default for Unknown Events
WS_RATE_LIMIT_DEFAULT_REQUESTS=60
WS_RATE_LIMIT_DEFAULT_WINDOW=60
WS_RATE_LIMIT_DEFAULT_BURST=1.5

# Redis Configuration (Future Enhancement)
RATE_LIMITING_REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=liap_tui:rate_limit:
REDIS_TTL_SECONDS=3600